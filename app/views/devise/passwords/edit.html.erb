<h2 class="text-center">Change your password</h2>
<hr/>

<%= simple_form_for(resource,
                    as: resource_name,
                    url: password_path(resource_name),
                    html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, autofocus: true, autocomplete: "off", label: "New password" %>
  <%= f.input :password_confirmation, autocomplete: "off", label: "Confirm new password" %>

  <div class="form-group">
    <%= f.button :submit, "Change my password", class: 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
